.container.mt-6
  - unless @enterable_contests.empty?
    %h2.text-xl.font-semibold Available contests to enter:
    .ml-3
      - @enterable_contests.each do |ec|
        .flex.mt-2
          %p
            = "#{ec[:name]}"
          .ml-4
            %a{href: "/contest/#{ec.id}/enter", class: 'text-blue-600 hover:text-blue-700 transition duration-300 ease-in-out mb-4'}
              Enter
          .ml-4
            %a{href: "/contest/#{ec.id}/live", class: 'text-blue-600 hover:text-blue-700 transition duration-300 ease-in-out mb-4'}
              See entries
  - unless @live_contests.empty?
    %h2.text-xl.font-semibold Live contests:
    .ml-3
      - @live_contests.each do |ec|
        .flex.mt-2
          .ml-4
            %a{href: "/contest/#{ec.id}/live", class: 'text-blue-600 hover:text-blue-700 transition duration-300 ease-in-out mb-4'}
              = "#{ec[:name]}"
  - unless @previous_contests.empty?
    %h2.mt-4.text-xl.font-semibold Previous contests:
    .ml-3
      - @previous_contests.each do |ec|
        .flex.mt-2
          .ml-4
            %a{href: "/contest/#{ec.id}/finished", class: 'text-blue-600 hover:text-blue-700 transition duration-300 ease-in-out mb-4'}
              = "#{ec[:name]}"



