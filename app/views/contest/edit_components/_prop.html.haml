- prop_value = local_assigns[:prop] ? local_assigns[:prop]["prop"] : ''
%div{'data-controller' => 'prop', 'data-edit-contest-target'=> 'template', 'data-prop-target'=> 'container', class: local_assigns[:hidden] ? 'hidden' : ''} 
  .flex.mt-4
    = f.label :new_prop_template_label, '1.', {class: 'form-label block inline text-gray-700 pt-1 text-base', 'data-prop-target'=> 'number'}
    = f.text_field :new_prop_template, {class: 'prop_value form-control block w-full ml-3 px-3 py-1.5 text-sm font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none', value: prop_value}
    .ml-2.py-2.flex
      %i.fa-solid.fa-chevron-up.cursor-pointer.text-gray-500{'data-action'=> 'click->prop#move_up'}
      %i.fa-solid.fa-chevron-down.ml-2.cursor-pointer.text-gray-500{'data-action'=> 'click->prop#move_down'}
      %i.fa-solid.fa-xmark.ml-2.cursor-pointer.text-gray-500{'data-action'=> 'click->prop#remove_prop'}

  .mt-2.ml-6.mb-6
    - # new option button
    %button.mt-2.inline-block.px-6.bg-purple-500.text-white.font-medium.text-xs.leading-tight.uppercase.rounded.shadow-md.hover:bg-purple-600.hover:shadow-lg.focus:bg-purple-600.focus:shadow-lg.focus:outline-none.focus:ring-0.active:bg-purple-700.active:shadow-lg.transition.duration-150.ease-in-out{class: "py-2.5", 'data-action'=> 'prop#new_option'}
      New option
  = render 'contest/edit_components/option', f: f, hidden: true 
  - if  local_assigns[:prop] && local_assigns[:prop]["options"]
    - prop["options"].each do |o|
      = render 'contest/edit_components/option', f: f, option: o["option"], points: o["points"]


